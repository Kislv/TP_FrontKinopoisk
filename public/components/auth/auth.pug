form(class=input.isLogin ? "login__form" : "signup__form", name='authForm')
    if !input.isLogin
        div.auth_name
            div.auth_name_labels
                label(class="text_inputs__label" for="name") Имя
            input(id="text-inputs-name" class="auth_input" type="text" name="name" placeholder="Введите имя")
            div#auth-name-error
        
    div.auth_email
        div.auth_email_labels
            label(class="text_inputs__label" for="email") Email
        input(id="text-inputs-email" class="auth_input" type="email" name="email" placeholder="Введите e-mail")
        div#auth-email-error

    div.auth_password
        div.auth_password_labels
            label(class="text_inputs__label" for="password") Пароль
        input(id="text-inputs-password" class="auth_input" type="password" name="password" placeholder="Введите пароль")
        div#auth-password-error

    if !input.isLogin
        div.auth_repeat_password
            div.auth_repeat_password_labels
                label(class="text_inputs__label" for="repeatPassword") Повторите пароль
            input(id="text-inputs-repeat-password" class="auth_input" type="password" name="repeatPassword" placeholder="Введите пароль повторно")
            div#auth-repeat-password-error

    div.auth_btn
        div#auth-btn-error
        input(class="auth__btn" type="button" value=input.isLogin ? "Войти" : "Зарегистрироваться" name="submitBtn")
