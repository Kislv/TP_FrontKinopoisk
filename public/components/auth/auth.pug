- var currClass = auth ? "auth" : "reg"

.auth-content
    div(class=currClass)
        if auth
            div(class=`${currClass}__head`) Войти
        else
            div(class=`${currClass}__head`) Зарегистрироваться
        form(class=`${currClass}__form` name=authFormName)
            each input in inputs
                div(class=`auth-input ${input.name}`)
                    div(class=`auth-input__head`)
                        label(for=input.name class="text-input__label") #{input.title}
                        div(class=`auth-input__error ${input.name}`)
                    input(
                        type=input.type
                        name=input.name
                        id=input.name
                        placeholder=input.placeholder
                        class="text-inputs"
                    )
            div.auth__btn
                div.auth__btn__error
                input(class=`auth__btn__input` type="button" name=submitButtonName value=auth ? "Войти" : "Создать аккаунт")
        if auth
            a(class="auth__invitation" href="/reg") Нет аккаунта? Зарегистрироваться!
        else
            a(class="auth__invitation" href="/auth") Уже есть аккаунт? Войти!